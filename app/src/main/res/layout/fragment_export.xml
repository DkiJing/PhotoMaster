<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@color/white"
    android:layout_height="wrap_content">
    <ImageButton
        android:id="@+id/fork"
        android:layout_width="28dp"
        android:layout_height="28dp"
        android:scaleType="fitXY"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="30dp"
        android:src="@drawable/fork"
        android:background="@color/white"
        />
    <TextView
        android:id="@+id/sharestring"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="SHARE TO"
        android:textColor="@color/main"
        android:fontFamily="sans-serif"
        android:textSize="15dp"
        app:layout_constraintLeft_toRightOf="@+id/fork"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="12dp"
        android:layout_marginLeft="80dp"
        />
    <ImageButton
        android:id="@+id/qqBtn"
        android:layout_width="28dp"
        android:layout_height="28dp"
        android:scaleType="fitXY"
        android:src="@drawable/qqselected"
        android:background="@color/white"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        app:layout_constraintLeft_toRightOf="@id/sharestring"
        />
    <ImageButton
        android:id="@+id/wechatBtn"
        android:layout_width="28dp"
        android:layout_height="28dp"
        android:scaleType="fitXY"
        android:src="@drawable/wechatselected"
        android:background="@color/white"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        app:layout_constraintLeft_toRightOf="@id/qqBtn"
        />
    <ImageButton
        android:id="@+id/cloudBtn"
        android:layout_width="28dp"
        android:layout_height="28dp"
        android:scaleType="fitXY"
        android:src="@drawable/cloudselected"
        android:background="@color/white"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        app:layout_constraintLeft_toRightOf="@id/wechatBtn"
        />
    <View
        android:id="@+id/emptyline"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/main"
        android:layout_marginTop="48dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent">
    </View>
    <Button
        android:drawableLeft="@drawable/downloadselected"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@color/white"
        android:text="Download to phone"
        app:layout_constraintTop_toTopOf="@id/emptyline"
        android:layout_marginTop="1dp"
        android:textSize="14dp"
        android:fontFamily="sans-serif"
        android:textColor="@color/main"
        android:paddingLeft="30dp"
        />
</androidx.constraintlayout.widget.ConstraintLayout>
